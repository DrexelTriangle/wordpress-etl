model Article {
  id            Int                       @id @default(autoincrement())
  title         String
  description   String?
  text          String
  tags          Json
  pubDate       DateTime
  modDate       DateTime?
  priority      Boolean
  breakingNews  Boolean
  commentStatus CommentStatus
  featuredImgID Int?
  photoCred     String?

  contributors  ArticleContributorRelation[]
}

model Contributor {
  id          Int                         @id @default(autoincrement())
  displayName String
  firstName   String
  lastName    String
  email       String
  login       String
  type        ContributorType
  articles    ArticleContributorRelation[]
}

model ArticleContributorRelation {
  article       Article     @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId     Int
  contributor   Contributor @relation(fields: [contributorId], references: [id], onDelete: Cascade)
  contributorId Int

  @@id([articleId, contributorId])
}

enum ContributorType {
  guestAuthor
  author
}

enum CommentStatus {
  open
  closed
}
